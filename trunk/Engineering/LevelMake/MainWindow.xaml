<Window x:Class="LevelMake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow">
    <Grid>
        <TextBox x:Name="pathBox" HorizontalAlignment="Left" Height="23" Margin="35,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="393"/>
        <Label x:Name="imgLabel1" Content="Add Image" HorizontalAlignment="Left" Margin="35,36,0,0" VerticalAlignment="Top" Width="169" FontWeight="Bold" FontSize="30"/>
        <Button x:Name="loadBtn" Content="Load" HorizontalAlignment="Left" Margin="480,91,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="loadBtn_Click"/>
        <Image x:Name="loadedImg" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="100" MinHeight="100" MaxWidth="250" MaxHeight="250"/>
        <Button x:Name="addBtn" Content="Add" HorizontalAlignment="Left" Margin="645,460,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="AddBtn_Click"/>
        <Button x:Name="opnBtn" Content="OpenFile" HorizontalAlignment="Left" Margin="577,91,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="opnBtn_Click"/>

    </Grid>
</Window>
